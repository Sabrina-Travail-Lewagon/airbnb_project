<div class="container mt-4">
  <h2>Mes logements présents sur Funbnb:</h2>
  <div class="row justify-content-left">
  <% @myflats.each do |flat| %>
    <div class="col-3 text-center">
      <div class="card-product-myflat my-2">
        <div class="my-flat-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path flat.photos.first.key %>')">
          <div class="card-product-myflat-content">
            <h3><%= flat.title.truncate(40) %></h3>
            <p class="mt-4"><%= flat.address %></p>
            <%= link_to 'Voir les réservations', my_flat_path(flat), class:"btn btn-red mt-3" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
